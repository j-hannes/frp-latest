body
  background-color #eec
  font-size 16px

.user
  display inline-block
  width 160px
  height 170px
  margin 20px
  border 2px solid #333
  position relative
  overflow hidden
  border-radius 10px
  background #333

  .avatar
    width 100%
    border-top-right-radius 20px

  .name
    margin 0
    position absolute
    bottom 0
    width 160px
    height 30px
    background #333
    color #ccc
    padding 0
    text-align center
    line-height 30px
    text-decoration none

  .close
    position absolute
    top 0
    right 0
    color #ccc
    width 25px
    height 25px
    line-height 22px
    text-align center
    text-decoration none
    border-bottom-left-radius 10px
    background-color #333
    font-weight bold

[v-cloak]
  display none

